source 'https://rubygems.org'

ruby '2.3.0'

gem 'rails', '4.2.6'

gem 'rails-api'

gem 'jbuilder'

gem 'bcrypt'

gem 'rails_12factor'

gem 'paperclip', "~> 4.3"

gem 'aws-sdk', '~> 1.6'

gem 'websocket-rails'

gem 'rack-cors', require: 'rack/cors'

group :production do
  gem 'pg'
  gem 'puma'
end

group :development, :test do
  gem 'byebug'
  gem 'sqlite3'
  gem 'spring'
end

